@import 'nib'

body
  padding 20px
  font 14px "Helvetica Neue", Helvetica, Arial, sans-serif
  color white
  background black

a
  color white

h1
h2
h3
h4
h5
  font-weight normal

.clearfix
  zoom 1

  &:before
  &:after
    display table
    line-height 0
    content ""

  &:after
    clear both

.container
  width 900px
  margin 0 auto

header
  padding-bottom 20px
  margin-bottom 30px
  border-bottom 1px solid rgba(255,255,255,0.2)

  .brand
    float left

  .nav
    margin-top 15px
    float right

.main
  width 70%
  display block
  float left

.related
  width 25%
  display block
  float right

.brand
  font-size 36px
  margin 0

  a
    text-decoration none

  span
    line-height 36px

  .icon
    width 36px
    height 36px
    display inline-block
    background white
    color black
    text-align center
    border-radius 200%
    margin-right 10px
    font-size 28px

.join
  padding 10px 20px
  font-size 14px
  font-weight bold
  text-decoration none
  background green
  border-radius 5px

.exit
  padding 10px 20px
  font-size 14px
  font-weight bold
  text-decoration none
  background crimson
  border-radius 5px

.quizzes
.questions

  li
    margin 0
    padding 10px
    font-size 16px

    a
      text-decoration none

.quizzes
  list-style none
  margin 0
  padding 0

  .status
    margin-right 10px

  .title
    margin-right 10px

  .total
    margin-right 10px
    color #555

  .format
    color #555

.questions
  li
    &.asked
      color #555
      font-style italic

.messages
  margin 0
  padding 0
  list-style none

  li
    margin 0
    padding 10px
    border-bottom 1px solid rgba(white, 0.2)


.status
  padding 2px 6px
  border-radius 3px
  display inline-block
  font-size 12px
  text-transform uppercase
  background #222
  color white
  font-style italic

  &.active
    background darkgreen
    font-style normal

  &.inactive
    background #555
    font-style normal

.off-air
  height 300px
  overflow hidden
  padding 0
  display block
  width = 100%/7
  background linear-gradient(left, white, white width, #eaea00 width, #eaea00 (width*2), #00eaff (width*2), #00eaff (width*3), #00ea00 (width*3), #00ea00 (width*4), #ea00ff (width*4), #ea00ff (width*5), #ea0001 (width*5), #ea0001 (width*6), #0000fe (width*6), #0000fe (width*7))
  position relative

  h2
    width 100%
    padding 20px 0
    background rgba(black, 0.6)
    text-align center
    display block
    position absolute
    bottom 0
    margin 0

.current-question
  padding 0
  height 300px
  background rgba(white,0.1)
  text-align center
  border-radius 5px
  position relative
  display block
  overflow hidden

  .progress
    font-size 16px
    font-weight normal

  .current
    position absolute
    left 10px
    top 10px

  .points
    position absolute
    right 10px
    top 10px

  .title
    padding-top 100px
    margin 0 100px 30px

  .choices
    list-style none
    margin 0
    padding 0

    li
      display inline-block
      margin 0
      padding 20px
      border-radius 5px
      margin-right 20px
      background rgba(255,255,255,0.2)

.quiz

  .details
    margin-bottom 30px


    .inactive
      opacity 1

    .active
      opacity 0.4

    .title
      font-size 16px
      margin-right 10px

    .status
      margin-right 10px

  .off-air
    display none

  &.playing

    .off-air
      display none

    .current-question
      display block

    .details
      .inactive
        opacity 0.4
      .active
        opacity 1

  &.paused

    .off-air
      display block

    .current-question
      display none

  &.admin
    .inactive
    .active
      cursor pointer

.avatars
  display block
  max-height 210px
  overflow-y scroll
  list-style none
  margin 0
  padding 0

  li
    margin 0
    padding 0
    display inline-block
    float left
    text-align center

    img
      max-width 32px

    input
      display none

    &:hover
      img
        transform scale(3)

.form
  width 100%
  margin 0

  .field-group
    clearfix()
    display block
    margin-bottom 20px

    label
      width 20%
      font-size 18px
      display inline-block
      margin-right 5%
      text-align right
      float left

    .field
      width 65%
      display inline-block
      float left

      input
        width 100%
        font-size 18px
        border none
        padding 10px

      .help
        font-size 12px
        font-style italic
        margin-top 5px

  button[type='submit']
    float left
    font-size 20px
    font-weight bold
    background green
    padding 10px 20px
    color white
    border none
    border-radius 5px
    margin-left 25%

.error
  margin-bottom 20px
  background crimson
  color white
  padding 20px
  border-radius 5px

